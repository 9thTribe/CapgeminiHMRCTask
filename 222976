package capgemini.Controllers;

import java.util.logging.Logger;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class PostcodesController {
    
    protected Logger logger = Logger.getLogger(PostcodesController.class
            .getName());
    
    public String categorieshttps = "//github.com/ideal-postcodes/postcodes.io.git"

    @RequestMapping("/categories")
    public String doCategories(@RequestParam(defaultValue="0") String category,

            @RequestParam(defaultValue="0") categorieshttps) {

        String category = String.valueOf(category);

        return "{\"categories\":\"" + category + "\";

    }
}
